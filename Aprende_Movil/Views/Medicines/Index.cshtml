@model IEnumerable<Aprende_Movil.Models.Recipe>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        table {
            border-collapse: collapse;
            border-spacing: 0;
            width: 100%;
            border: 1px solid #ddd;
        }

        th, td {
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2
        }
    </style>
</head>
<body>
    <div>
        <h2>Medicinas</h2>
        <button onclick="location.href='@Url.Action("Index", "Medicine", new { id = "new"})'">Agregar nueva Medicina</button>
    </div>
    <div style="overflow-x:auto;">
        <table id="table_medicines">
            <thead>
                <tr>
                    <th>Medicamento</th>
                    <th>Tipo</th>
                    <th>Frecuencia</th>
                    <th>Cantidad</th>
                    <th>Medida</th>
                    <th>Fecha de Inicio</th>
                    <th>Fecha Final</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var recipe in Model) {
                <tr>
                    <td>@Html.DisplayFor(modelItem => recipe.medicine.name)</td>
                    <td>@Html.DisplayFor(modelItem => recipe.medicine.medicineID)</td>
                    <td>@Html.DisplayFor(modelItem => recipe.frequency)</td>
                    <td>@Html.DisplayFor(modelItem => recipe.quantity)</td>
                    <td>@Html.DisplayFor(modelItem => recipe.medicine.measure)</td>
                    <td>@Html.DisplayFor(modelItem => recipe.startDate)</td>
                    <td>@Html.DisplayFor(modelItem => recipe.endDate)</td>
                    <td><input type="button" value="Editar Medicamento" 
                               onclick="location.href='@Url.Action("Index", "Medicine",
                                                      new {name=recipe.medicine.name,
                                                          id =recipe.medicine.medicineID,
                                                          freq=recipe.frequency,
                                                          qty=recipe.quantity,
                                                          msr=recipe.medicine.measure,
                                                          srtD=recipe.startDate.ToString("yyyy-mm-dd"),
                                                          endD=recipe.endDate.ToString("yyyy-mm-dd")})'" /></td>
                </tr>
                }
            </tbody>
        </table>
    </div>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src="http://ajax.cdnjs.com/ajax/libs/json2/20110223/json2.js"></script>
    <script type="text/javascript">
        $("body").on("click", "#btnAdd", function () {
            //Reference the Name and Country TextBoxes.
            var txtName = $("#txtName");
            var txtCountry = $("#txtCountry");

            //Get the reference of the Table's TBODY element.
            var tBody = $("#tblCustomers > TBODY")[0];

            //Add Row.
            var row = tBody.insertRow(-1);

            //Add Name cell.
            var cell = $(row.insertCell(-1));
            cell.html(txtName.val());

            //Add Country cell.
            cell = $(row.insertCell(-1));
            cell.html(txtCountry.val());

            //Add Button cell.
            cell = $(row.insertCell(-1));
            var btnRemove = $("<input />");
            btnRemove.attr("type", "button");
            btnRemove.attr("onclick", "Remove(this);");
            btnRemove.val("Remove");
            cell.append(btnRemove);

            //Clear the TextBoxes.
            txtName.val("");
            txtCountry.val("");
        });

        function Remove(button) {
            //Url.Action("Index", "Home")

            //Determine the reference of the Row using the Button.
            var row = $(button).closest("TR");
            var name = $("TD", row).eq(0).html();
            if (confirm("Do you want to delete: " + name)) {
                //Get the reference of the Table.
                var table = $("#tblCustomers")[0];

                //Delete the Table row using it's Index.
                table.deleteRow(row[0].rowIndex);
            }
        };

        $("body").on("click", "#btnSave", function () {
            //Loop through the Table rows and build a JSON array.
            var customers = new Array();
            $("#tblCustomers TBODY TR").each(function () {
                var row = $(this);
                var customer = {};
                customer.Name = row.find("TD").eq(0).html();
                customer.Country = row.find("TD").eq(1).html();
                customers.push(customer);
            });

            //Send the JSON array to Controller using AJAX.
            $.ajax({
                type: "POST",
                url: "/Home/InsertCustomers",
                data: JSON.stringify(customers),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (r) {
                    alert(r + " record(s) inserted.");
                }
            });
        });
    </script>

</body>
</html>

